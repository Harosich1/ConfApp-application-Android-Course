<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/ligthly_darker_white"
                />
            <stroke
                android:width="@dimen/editText_stroke_width"
                android:color="@color/grey"
                />
            <corners android:radius="@dimen/editText_frame_radius"
                />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/brighter_blue"
                />
            <stroke
                android:width="@dimen/editText_stroke_width"
                android:color="@color/brighter_blue"
                />
            <corners android:radius="@dimen/editText_frame_radius"
                />
        </shape>
    </item>
</selector>
