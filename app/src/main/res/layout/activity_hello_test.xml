<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_hello_header"
        android:background="@color/black"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/header_background"
            >

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_hello_margin"
                android:src="@drawable/header_logo_white"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_corona_small"
                />

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/hello_some_user_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/activity_hello_margin"
        android:layout_marginTop="@dimen/activity_hello_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/activity_hello_view_text_size"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/activity_hello_margin"
        android:layout_marginTop="@dimen/activity_hello_margin"
        android:background="@drawable/background_hello_button"
        android:paddingTop="@dimen/activity_hello_padding"
        android:paddingBottom="@dimen/activity_hello_padding"
        android:text="@string/action_back"
        android:textAllCaps="false"
        android:textColor="@drawable/hello_button_text_color"
        android:textSize="@dimen/activity_hello_button_text_size"
        android:textStyle="bold"
        android:typeface="sans"
        />

</LinearLayout>


