<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".events.presentation.UpcomingEventsActivity"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/event_margin"
           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               >

               <Button
                   android:id="@+id/upcoming_events_syncLoad"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_gravity="start"
                   android:padding="@dimen/activity_hello_button_padding"
                   android:text="@string/event_sync_loading"
                   android:textAllCaps="false"
                   android:textSize="@dimen/activity_hello_button_text_size"
                   android:layout_marginTop="@dimen/event_margin"
                   android:layout_marginHorizontal="@dimen/event_margin"
                   />

               <Button
                   android:id="@+id/upcoming_events_aSyncLoad"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_gravity="end"
                   android:padding="@dimen/activity_hello_button_padding"
                   android:text="@string/event_async_loading"
                   android:textAllCaps="false"
                   android:textSize="@dimen/activity_hello_button_text_size"
                   android:layout_marginTop="@dimen/event_margin"
                   android:layout_marginHorizontal="@dimen/event_margin"
                   />

           </LinearLayout>
       </FrameLayout>

       <TextView
           android:id="@+id/upcoming_events_textView"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:textColor="@color/black"
           />
   </LinearLayout>


    <ProgressBar
        android:id="@+id/events_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        />

    </FrameLayout>
</ScrollView>